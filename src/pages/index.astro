---
import Layout from "../layouts/Layout.astro"
import SkillCard from "../components/SkillCard.astro"
import {Image} from "astro:assets"
import profileImage from "../assets/profile-photo-blue-bg.png";
import skills from "../assets/data/skills.json";

---

<Layout>
    <section class="container ">
        <article class="description col-8 bg-100 rounded-1">
            <h1>
                Hola Soy luis.
            </h1>
            <div class="spacing"></div>
            <h2>
                Desarrollador con 2 años de experiencia creando, modificando, probando y
                desplegando aplicaciones creadas con lenguajes y herramientas tecnológicas, orientado a 
                microservicios.  Capacidad de resolutiva, Trabajo en equipo, Liderazgo, Comunicación asertiva. 
            </h2>
        </article>
        <article class="description-image col-4">
            <Image src={profileImage} alt="Profile image" width={200} height={200} />
        </article>
    </section>
    <section class="container skills-section">
        <article class="col-12 ">
            <h2 class="skill-title">Habilidades</h2>
        </article>
        <article class="col-12 bg-100">
            { skills.skills.map((skill, i) => {
                return  <SkillCard name={skill.name} icon={skill.icon} description={skill.description} key={i} />
            })}
        </article>
    </section>
</Layout>
